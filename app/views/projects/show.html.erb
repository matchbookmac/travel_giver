<div class="well admin-well">
  <% if current_user && current_user.admin %>
    <%= link_to "Edit project", edit_country_project_path(@country, @project) %> |
    <%= link_to "Delete project", country_project_path(@country, @project),
            :data => {:confirm => "Are you sure you want to delete this project?",
            :method => "delete"} %></p>
  <% end %>
</div>
</div>

<div class="container">
  <div class="project">
    <h1><%= @project.p_name %></h1>
    <h3><%= @country.c_name %></h3>
    <div class="well project-well">
      <% if @project.p_image %>
        <%= image_tag (@project.p_image), class:"country-image" %>
      <% elsif @project.project_image_file_name %>
        <%= image_tag @project.attached_image.url(:medium) %>
      <% else %>
      <%= image_tag ('missing.png'), class:"country-image" %>
      <% end %>
        <p> Total Needed: $<%= @project.total_needed %></p>
        <p> Total Donated: $<%= @project.total_donated %></p>
        <p> Number of Donations: <%= @project.donation_count %></p>
        <p><%= @project.p_description %></p>
      </div>
    <%= render partial: 'charges/form', project_id: @project.id %>
  </div>
